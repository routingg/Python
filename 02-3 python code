num_input = float(str_input)

print()
print(num_input, "inch")
print((num_input * 2.54), "cm")
print()

print("p.90 확인문제 5")
str_input = input("원의 반지름 입력> ")
num_input = float(str_input)
print()
print("반지름: ", num_input)
print("둘레: ", 2 * 3.14 * num_input)
print("넓이: ", 3.14 * num_input * num_input)
print()


print()

print("ver.2")
a = input("문자열 입력> ")
b = input("문자열 입력> ")
c = a

print(a,b)
a = b
b = c
print(a,b)
print()

print("ver.3")
a = input("문자열 입력> ")
b = input("문자열 입력> ")

print(a, b)
cmp = a
a = b
b= cmp
print(a, b)
